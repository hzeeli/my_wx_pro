/* pages/join/join.wxss */
.form{
  font-size: 16px;
  width: 100%;
  height: 1200rpx;
  background-color: #fff;
  padding: 0 35rpx;
  box-sizing: border-box;
}
.form view{
  height: 90rpx;
  line-height: 90rpx;

}
.form input,.picker,.radios,.textarea{
  background-color:#f1f1f1; 
  height: 100%;
  border-radius: 10rpx;
  padding: 0 50rpx;
}
.radios{
  font-size: 12px;
}
radio .wx-radio-input{
   border-radius: 50%;
   width: 30rpx;
   height: 30rpx;
}
.textarea{
  padding-top: 20rpx;
  width: 100%;
  height: 300rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
button{
  background-color:#FCAD00;
  color: #fff;
} 
