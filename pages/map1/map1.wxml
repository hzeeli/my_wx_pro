<!--pages/map1/map1.wxml--> 
<map  
  id='map'  
  scale="8" 
  longitude="{{centerX}}"  
  latitude="{{centerY}}"  
  markers="{{markers}}"  
  controls="{{controls}}" 
  show-compass 
  bindmarkertap="markertap" 
  bindcallouttap="callouttap" 
  bindcontroltap="controltap" 
  show-location 
  style="width: 100%; height: 580px;" 
> 
</map> 